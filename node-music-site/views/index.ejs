<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Young Musicians Hub</h1>
        </div>

        <div class="nav-menu">
            <button class="menu-button" onclick="showSection('home')">Home</button>
            
            <div class="dropdown">
                <button class="dropbtn">Flute</button>
                <div class="dropdown-content">
                    <a onclick="showSection('flute-songs')">Songs</a>
                    <a onclick="showSection('flute-practice')">Practice</a>
                </div>
            </div>

            <div class="dropdown">
                <button class="dropbtn">Drums</button>
                <div class="dropdown-content">
                    <a onclick="showSection('drum-songs')">Songs</a>
                    <a onclick="showSection('drum-practice')">Practice</a>
                </div>
            </div>
        </div>

        <div id="home" class="content-section">
            <h2>Welcome to Our Music Journey</h2>
            
            <div class="kids-profiles">
                <div class="profile-card">
                    <h3><%= children.child1.name %>'s Corner</h3>
                    <div class="profile-content">
                        <div class="profile-info">
                            <p>Age: <%= children.child1.age %></p>
                            <p>Instruments: <%= children.child1.instruments.join(', ') %></p>
                        </div>
                        <div class="profile-about">
                            <h4>About</h4>
                            <p><%= children.child1.about %></p>
                        </div>
                        <div class="achievements">
                            <h4>Achievements</h4>
                            <ul>
                                <% children.child1.achievements.forEach(function(achievement) { %>
                                    <li><%= achievement %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="profile-card">
                    <h3><%= children.child2.name %>'s Corner</h3>
                    <div class="profile-content">
                        <div class="profile-info">
                            <p>Age: <%= children.child2.age %></p>
                            <p>Instruments: <%= children.child2.instruments.join(', ') %></p>
                        </div>
                        <div class="profile-about">
                            <h4>About</h4>
                            <p><%= children.child2.about %></p>
                        </div>
                        <div class="achievements">
                            <h4>Achievements</h4>
                            <ul>
                                <% children.child2.achievements.forEach(function(achievement) { %>
                                    <li><%= achievement %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="flute-songs" class="content-section">
            <h2>Flute Songs</h2>
            <!-- Add your flute songs content here -->
        </div>

        <div id="drum-songs" class="content-section">
            <h2>Drum Songs</h2>
            <!-- Add your drum songs content here -->
        </div>
    </div>

    <script src="/js/main.js"></script>
</body>
</html>
